name: Build and Deploy

on:
  push:
    branches: [ main ]  # action runs when main branch is pushed

permissions:
  contents: write       # allows commit & push

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # 1. Clone the code
      - uses: actions/checkout@v3

        # 2. Install the desired Node.js version
      - name: Use Node
        uses: actions/setup-node@v3
        with:
          node-version: 22

        # 3. Install the project dependencies
      - name: Install dependencies
        run: npm install

      # 4. Build the project
      - name: Build the project
        run: npm run build

      # 5. Clear and create docs folder and copy build files to it
      - name: Copy build to docs folder
        run: |
          rm -rf docs
          mkdir docs
          cp -R build/* docs

      # 6. Commit and push changes to main branch
      - name: Commit and push changes
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add docs
          git commit -m "chore: update docs build [skip ci]" || echo "No changes to commit."
          git push
